import java.util.Scanner;



static Scanner sc = new Scanner(System.in);

public static void main(String[] args) {

    String[] genres = {
            "Heroic Fantasy",
            "Sci-Fi Adventure",
            "Ninja/Samurai",
            "Mythology",
            "Post-Apocalyptic",
            "Pirate Adventure",
            "Detective/Crime",
            "Comedy/Slapstick",
            "Romance",
            "Horror",
            "Sci-Fi Thriller",
            "Fantasy Romance",
            "Superhero",
            "Steampunk",
            "Western"
    };

    System.out.println("=== HERO GENRES ===");
    for (int i = 0; i < genres.length; i++) {
        System.out.println((i + 1) + ". " + genres[i]); // prints each genre as a bullet
    }


    System.out.print("Choose a genre (1â€“15): ");
    int genreChoice = sc.nextInt();
    sc.nextLine();

    String[][] storyTitles = getStoryTitles();

    System.out.println("\n--- STORIES IN " + genres[genreChoice - 1] + " ---");
    for (int i = 0; i < 15; i++) {
        System.out.println((i + 1) + ". " + storyTitles[genreChoice - 1][i]);
    }

    System.out.print("Choose a story (1â€“15): ");
    int storyChoice = sc.nextInt();
    sc.nextLine();

    System.out.println("\n--- HERO CREATION ---");

    // SAME inputs for all genres
    System.out.print("Hero Name: "); String hero = sc.nextLine();
    System.out.print("Companion Name: "); String companion = sc.nextLine();
    System.out.print("Weapon: "); String weapon = sc.nextLine();
    System.out.print("Villain Name: "); String villain = sc.nextLine();
    System.out.print("Power/Magic: "); String power = sc.nextLine();
    System.out.print("Creature: "); String creature = sc.nextLine();
    System.out.print("Place: "); String place = sc.nextLine();
    System.out.print("Relic/Item: "); String relic = sc.nextLine();
    System.out.print("Number (It should be more than 1): "); String number = sc.nextLine();

    String story = getStoryTemplate(genreChoice - 1, storyChoice - 1,
            hero, companion, weapon, villain,
            power, creature, place, relic, number);

    System.out.println("\n=== YOUR HERO'S MAD LIB STORY ===\n");
    System.out.println(story);
    System.out.println("\n" + "=".repeat(60));
    System.out.println("ðŸ“œ PRESS SHIFT + SCROLL DOWN with mouse to read the story! ðŸ“œ");
    System.out.println("=".repeat(60) + "\n");
}

